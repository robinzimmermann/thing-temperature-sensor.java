{
  "confluent.topic.bootstrap.servers": "kafka.example.com:9092",
  "confluent.topic.security.protocol": "SSL",
  "confluent.topic.ssl.truststore.location": "/var/private/ssl/truststore.db",
  "confluent.topic.ssl.truststore.password": "change-this-password",
  "confluent.topic.ssl.keystore.location": "/var/private/ssl/keystore.db",
  "confluent.topic.ssl.keystore.password": "change-this-password",
  "confluent.topic.ssl.endpoint.identification.algorithm": "",
  "confluent.topic.replication.factor": 2,
  "connector.class": "io.confluent.connect.mqtt.MqttSourceConnector",
  "tasks.max": 1,
  "mqtt.server.uri": "tcp://mosquitto:1883",
  "mqtt.topics": "/state/#",
  "kafka.topic": "state",
  "converter.encoding": "UTF-8",
  "value.converter.schemas.enable": false,
  "transforms": "ConvertValue,RegexKey,ExtractField",
  "transforms.ConvertValue.type": "com.tenefit.kafka.connect.transforms.Convert$Value",
  "transforms.ConvertValue.converter": "org.apache.kafka.connect.json.JsonConverter",
  "transforms.RegexKey.type": "com.tenefit.kafka.connect.transforms.RegexKey",
  "transforms.RegexKey.regex": "/state/(?<id>[^/]+)",
  "transforms.ExtractField.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
  "transforms.ExtractField.field": "id"
}
